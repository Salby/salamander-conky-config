double_buffer yes
background yes

use_xft yes
xftfont AvantGarde LT Medium:size=8
xftalpha 0.8

lua_load ./conky_draw.lua
lua_draw_hook_post mainlua_load ./conky_draw.lua
lua_draw_hook_post main

update_interval 1.0

total_run_times 0

own_window yes
own_window_type normal
own_window_transparent no
own_window_argb_visual yes
own_window_argb_value 0
own_window_hints undecorated,below,skip_taskbar,sticky,skip_pager
no_buffers yes
minimum_size 200 5
maximum_width 200
draw_shades no
draw_outline no
draw_borders no
stippled_borders 0
alignment top_right
gap_x 10
gap_y 10
uppercase no

sleep 5

#use_spaces yes
override_utf8_locale yes

color0 d0d0d0 #363636 #7d7d7d #171515
color1 2f343f #363636 #slategrey
color2 ffffff #

TEXT
${color0}${hr 1}
${color2}${alignr}Time / Info

${color1}date:   ${color0}${alignr}${time %a,} ${time %e %B %G}
${color1}time:   ${color0}${alignr}${time %H:%M:%S}
${color1}uptime: ${color0}${alignr}$uptime
${color1}os:     ${color0}${alignr}${sysname} ${kernel}
${hr 1}
${color2}${alignr}CPU

${color1}Intel Core M3-6Y30 2.2Ghz
${color1}freq:   ${color0}${alignr}${freq}Mhz ${alignr}${exec sensors | grep ^temp1 | tail -n 1 |awk '{print $2}'}
${color0}core 1:
${color0}core 2:
${hr 1}
${color2}${alignr}GPU

${color1}Intel HD Graphics 516
#GPU load: ${execi 1 aticonfig --adapter=0 --od-getclocks | tail -n1 | gawk '{printf $4}'}
${color0}${hr 1}
${color2}${alignr}Memory

${color1}ram: ${color0}$memperc%
$alignr $mem / $memmax
${top_mem name 1} ${alignr}${top_mem mem_res 1}
${top_mem name 2} ${alignr}${top_mem mem_res 2}
${top_mem name 3} ${alignr}${top_mem mem_res 3}
${top_mem name 4} ${alignr}${top_mem mem_res 4}
${top_mem name 5} ${alignr}${top_mem mem_res 5}
${hr 1}
${color2}${alignr}Storage

${color1}SSD ${alignr}${color0}${fs_used /home}/${fs_size /home}

${if_mounted /run/media/kaikidan/Storage} ${color1}[HDD] /Storage: ${alignr}${color0}${fs_free /run/media/kaikidan/Storage}/${fs_size /run/media/kaikidan/Storage}
${fs_bar /run/media/kaikidan/Storage}
${endif}
${if_mounted /run/media/kaikidan/SAMSUNG} ${color1}[HDD] /External: ${alignr}${color0}${fs_free /run/media/kaikidan/SAMSUNG}/${fs_size /run/media/kaikidan/SAMSUNG}
${fs_bar /run/media/kaikidan/SAMSUNG}
${endif}
${hr 1}
